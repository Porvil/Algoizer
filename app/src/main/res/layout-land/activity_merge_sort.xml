<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:verticalScrollbarPosition="left"
    tools:context=".algorithms.sorting.merge.MergeSortActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/ll_maincontainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_anim"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorDivider" />

        <LinearLayout
            android:id="@+id/ll_animcontrols"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/sb_animspeed"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progress="50" />

            <ImageButton
                android:id="@+id/btn_backward"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />


            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_baseline_play_arrow_24" />

            <ImageButton
                android:id="@+id/btn_forward"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

            <TextView
                android:id="@+id/tv_seqno"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="0" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_menubutton"
                android:layout_width="41dp"
                android:layout_height="39dp"
                android:layout_margin="16dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_curinst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_nextinst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="TextView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorDivider" />

        <ScrollView
            android:id="@+id/sv_psuedocode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:scrollbarSize="10dp"
            android:scrollbarStyle="outsideInset"
            android:verticalScrollbarPosition="left">

            <LinearLayout
                android:id="@+id/ll_pseudocode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>