        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColorDarkerShade</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/mainColorDone</item>
        <item name="colorControlNormal">@color/mainColorDone</item>
<!--        <item name="android:background">@color/mainColorDarkerShade</item>-->

    </style>

